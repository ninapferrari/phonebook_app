<p style="color: green"><%= notice %></p>

<h1>Contacts List</h1>

<table class="table table-striped table-bordered table-hover">
<thead class="thead-dark">
  <tr>
    <th>Name</th>
    <th>Phone</th>
    <th>Notas</th>
    <th> </th>
  </tr>
</thead>

<tbody>
  <% @contacts.each do |contact| %>
    <tr>
      <td>
<%= link_to contact.first_name + ' ' + contact.last_name, contact %>


      </td>

      <td><%= contact.phone %></td>
      <td><%= contact.notes %></td>
      
      
      
      
      
      <td><%= link_to 'Delete', contact, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %>
      <%= link_to "Edit", edit_contact_path(contact), method: :put, class: "btn btn-outline-danger btn-sm" %>
      <%= link_to "Show", contact, method: :get, class: "btn btn-outline-danger btn-sm"  %>
      </td>
      
    </tr>
    <% end %>
</tbody>
</table>

<%= link_to "New contact", new_contact_path, method: :get, class: "btn btn-secondary"%>
